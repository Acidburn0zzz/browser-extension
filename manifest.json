{
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["javascripts/bountysource.js", "javascripts/thumbs_up_box.js"],
      "css": ["stylesheets/thumbs.css"],
      "run_at": "document_end"
    }
  ],
  "description": "View Bountysource bounties directly from your bug tracker",
  "icons": {
    "16": "images/bountysource-16.png",
    "48": "images/bountysource-48.png",
    "128": "images/bountysource-128.png"
  },
  "manifest_version": 2,
  "name": "Bountysource",
  "permissions": [ "cookies", "https://www.bountysource.com/*", "https://localhost/*" ],
  "version": "0.0.1",
  "web_accessible_resources": [
    "images/thumbsup-20.png",
    "images/thumbsup-32.png",
    "images/spinner.gif"
  ],
  "background": {
    "scripts": ["javascripts/bountysource.js","javascripts/background.js"]
  },
  "browser_action": {
    "default_icon": "images/thumbsup-32.png",
    "default_popup": "popup/layout.html"
  }
}
